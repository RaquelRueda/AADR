@using InnovacionDocentes.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
     Layout =
"~/Views/_LayoutLogin.cshtml";
}
@using(Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form>
                        <h1>Iniciar Sesión</h1>

                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                       
                        <div class="row">
                            <div class="col-md-2">
                                <label>Email: </label>
                            </div>
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row">

                            <div class="col-md-2">
                                <label>Pass:</label>
                            </div>
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class=" col-md-3">
                            </div>
                            <div class=" col-md-7">
                                <input type="submit" value="Iniciar sesión" class="btn btn-primary btn-block" />
                            </div>
                            <div class=" col-md-2">
                            </div>
                        </div>

                        <div class="separator">
                            <p class="change_link">
                                Nuevo en el sitio?
                                @Html.ActionLink("Crear Cuenta", "Register", new { @class = "to_register" })

                            </p>

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-book"></i> Apoyo al Docente!</h1>
                                <p>©2019 All Rights Reserved. Apoyo al Docente! </p>
                            </div>
                            
                        </div>
                        
                    </form>
                </section>
                
            </div>
            
            </div>
            @* Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
            <p>
                @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
            </p>*@


            


}