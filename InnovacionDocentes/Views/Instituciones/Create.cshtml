                @Html.EditorFor(model => model.strClave, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.strClave, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idEstado, "idEstado", htmlAttributes: new { @class = "control-label col-md-2" })
