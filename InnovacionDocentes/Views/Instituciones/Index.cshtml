@model IEnumerable<InnovacionDocentes.Models.Instituciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="right_col" role="main">

        <div class="">
            <div class="page-title">
                <div class="title_left">
                </div>


            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 ">
                    <div class="x_panel">
                        <div class="x_title">

                            <h3>:: Todas Las Instituciones ::</h3>

                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">



                            <div>
                                <button type="button" class="btn btn-success btn-small  pull-right"> @Html.ActionLink("Create New", "Create")</button>
                            </div>
                            <br />
                            <br />
                            <br />
                            <table class="table table table-striped projects" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Nombre
                                        </th>
                                        <th>
                                            Clave
                                        </th>
                                        <th>
                                            Estado
                                        </th>
                                        <th>
                                            Municipio
                                        </th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.idInstintucion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.strNombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.strClave)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CatEstado.strDescripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CatMunicipio.strDescripcion)
                                        </td>

                                    
                                    </tr>
                                    }
                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
